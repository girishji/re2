#
# Invoke as 'make -f make.local <target>'
#

include Makevars

.PHONY: clean
clean:
	rm -f $(OFILES) *.o re2.so

.PHONY: buildR
buildR:
	cd ../ && Rscript -e 'library(Rcpp);compileAttributes()'
	sed -r 's/(.*)more_options = NULL(.*)/\1...\2\n    more_options <- list(...)/g' \
	    ../R/RcppExports.R > ../R/RcppExports.R.tmp
	mv ../R/RcppExports.R.tmp ../R/RcppExports.R
	cd ../../ && R CMD INSTALL re2
